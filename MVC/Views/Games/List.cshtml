@model IEnumerable<GameModel>
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Games";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="datatable" class="display" style="width:100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishDateOutput)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSalesPriceOutput)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherOutput)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishDateOutput)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalSalesPriceOutput)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherOutput)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>&nbsp;|&nbsp;
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>&nbsp;|&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>

    <script>
        $(function () {
            $("#datatable").DataTable();
        });
    </script>
}

