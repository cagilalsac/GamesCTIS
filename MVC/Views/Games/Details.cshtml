@model GameModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Game Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.PublishDateOutput)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.PublishDateOutput)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.TotalSalesPriceOutput)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.TotalSalesPriceOutput)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.PublisherOutput)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.PublisherOutput)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Users)
        </dt>
        <dd class="col-10">
            @foreach (var user in Model.Users)
            {
                @(user.UserName + " (" + user.Status + ")")
                <br>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to List</a>
</div>



